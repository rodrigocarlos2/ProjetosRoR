<%= form_for @invitation, :html => { :class => "form-horizontal invitation" } do |f| %>

  <% if @invitation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@invitation.errors.count, "error") %> prohibited this invitation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @invitation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :friend_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= collection_select(:invitation, :friend_id, Friend.all, :id, :name) %>
    </div>
    <%=f.error_span(:friend_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                invitations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
